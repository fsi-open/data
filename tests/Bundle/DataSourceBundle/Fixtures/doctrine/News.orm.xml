<?xml version="1.0" encoding="UTF-8" ?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                                      https://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">

    <entity name="Tests\FSi\Bundle\DataSourceBundle\Fixtures\Entity\News">

        <id name="id" type="integer">
            <generator strategy="AUTO" />
        </id>

        <field name="title" nullable="true" />
        <field name="author" nullable="true" />
        <field name="shortContent" length="500" nullable="true" />
        <field name="content" type="text" nullable="true" />
        <field name="createDate" type="datetime_immutable" nullable="true" />
        <field name="createTime" type="time_immutable" nullable="true" />
        <field name="views" type="smallint" nullable="true" />
        <field name="tags" nullable="true" />
        <field name="active" type="boolean" nullable="true" />

        <many-to-one field="category" inversed-by="news" target-entity="Tests\FSi\Bundle\DataSourceBundle\Fixtures\Entity\Category" />
        <many-to-one field="otherCategory" target-entity="Tests\FSi\Bundle\DataSourceBundle\Fixtures\Entity\Category" />
        <many-to-many field="groups" target-entity="Tests\FSi\Bundle\DataSourceBundle\Fixtures\Entity\Group" />

    </entity>
</doctrine-mapping>
