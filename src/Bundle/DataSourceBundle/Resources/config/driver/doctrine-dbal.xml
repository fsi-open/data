<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <!-- DBALFactory -->
        <service id="FSi\Component\DataSource\Driver\Doctrine\DBAL\DBALFactory">
            <argument type="service" id="doctrine"/>
            <argument type="collection">
                <!--
                We don't need to be able to add more extensions.
                 * more fields can be registered with the datasource.driver.doctrine_dbal.field tag
                 * more field subscribers can be registered with the datasource.driver.doctrine_dbal.field.subscriber tag
                 * more listeners can be registered with the datasource.listener tag
                -->
            </argument>
            <tag name="datasource.driver.factory"/>
        </service>

        <!-- Doctrine/CoreExtension -->
        <service id="FSi\Component\DataSource\Driver\Doctrine\DBAL\Extension\Core\Field\Date">
            <tag name="datasource.driver.doctrine-dbal.field" alias="date"/>
        </service>
        <service id="FSi\Component\DataSource\Driver\Doctrine\DBAL\Extension\Core\Field\DateTime">
            <tag name="datasource.driver.doctrine-dbal.field" alias="datetime"/>
        </service>
        <service id="FSi\Component\DataSource\Driver\Doctrine\DBAL\Extension\Core\Field\Number">
            <tag name="datasource.driver.doctrine-dbal.field" alias="number"/>
        </service>
        <service id="FSi\Component\DataSource\Driver\Doctrine\DBAL\Extension\Core\Field\Text">
            <tag name="datasource.driver.doctrine-dbal.field" alias="text"/>
        </service>
        <service id="FSi\Component\DataSource\Driver\Doctrine\DBAL\Extension\Core\Field\Time">
            <tag name="datasource.driver.doctrine-dbal.field" alias="time"/>
        </service>
        <service id="FSi\Component\DataSource\Driver\Doctrine\DBAL\Extension\Core\Field\Boolean">
            <tag name="datasource.driver.doctrine-dbal.field" alias="boolean"/>
        </service>
        <service id="FSi\Component\DataSource\Driver\Doctrine\DBAL\Extension\Core\EventSubscriber\ResultIndexer">
            <tag name="datasource.driver.doctrine-dbal.subscriber" alias="result_indexer"/>
        </service>

        <!-- OrderingExtension -->
        <service id="FSi\Component\DataSource\Extension\Core\Ordering\Field\FieldExtension">
            <tag name="datasource.driver.doctrine-dbal.field.subscriber" alias="ordering"/>
        </service>

        <!-- Symfony/FormExtension -->
        <service id="FSi\Bundle\DataSourceBundle\DataSource\Extension\Symfony\Form\Field\FormFieldExtension">
            <tag name="datasource.driver.doctrine-dbal.field.subscriber" alias="symfonyform"/>
            <argument type="service" id="form.factory"/>
            <argument type="service" id="translator"/>
        </service>

    </services>
</container>
