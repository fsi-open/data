<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <!-- DriverFactoryManager -->
        <service id="FSi\Component\DataSource\Driver\DriverFactoryManagerInterface"
                 alias="FSi\Component\DataSource\Driver\DriverFactoryManager"
        />

        <service id="FSi\Component\DataSource\Driver\DriverFactoryManager">
            <argument type="collection" />
        </service>

        <!-- DataSourceFactory -->
        <service id="FSi\Component\DataSource\DataSourceFactoryInterface"
                 alias="FSi\Component\DataSource\DataSourceFactory"
                 public="true"
        />

        <service id="FSi\Component\DataSource\DataSourceFactory" lazy="true">
            <argument type="service" id="event_dispatcher" />
            <argument type="service" id="FSi\Component\DataSource\Driver\DriverFactoryManagerInterface"></argument>
        </service>

        <!-- Core/Extensions -->
        <prototype namespace="FSi\Component\DataSource\Extension\Core\Ordering\"
                   resource="../../../../Component/DataSource/Extension/Core/Ordering"
                   autoconfigure="true"
                   autowire="true"
        />

        <prototype namespace="FSi\Component\DataSource\Extension\Core\Pagination\"
                   resource="../../../../Component/DataSource/Extension/Core/Pagination"
                   autoconfigure="true"
                   autowire="true"
        />

        <!-- Symfony/Extensions -->
        <prototype namespace="FSi\Bundle\DataSourceBundle\DataSource\Extension\Symfony\"
                   resource="../../DataSource/Extension/Symfony/{Core,Form}"
                   autoconfigure="true"
                   autowire="true"
        />

    </services>
</container>
