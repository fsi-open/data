<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <!-- Form types -->
        <service id="FSi\Bundle\DataSourceBundle\DataSource\Extension\Symfony\Form\Type\BetweenType">
            <tag name="form.type" alias="datasource_between" />
        </service>

        <!-- DriverFactoryManager -->
        <service id="FSi\Component\DataSource\Driver\DriverFactoryManager">
            <argument type="collection" />
        </service>

        <!-- DataSourceFactory -->
        <service id="FSi\Component\DataSource\DataSourceFactory" lazy="true" public="true">
            <argument type="service" id="FSi\Component\DataSource\Driver\DriverFactoryManager"></argument>
            <argument type="collection">
                <!--
                We don't need to be able to add more extensions.
                 * more driver extensions can be registered with the datasource.driver.extension tag
                 * more listeners can be registered with the datasource.subscriber tag
                -->
                <argument type="service" id="FSi\Bundle\DataSourceBundle\DataSource\Extension\Symfony\DependencyInjection\DependencyInjectionExtension" />
            </argument>
        </service>

        <service id="FSi\Component\DataSource\DataSourceFactoryInterface" public="true" />

        <!-- PaginationExtension -->
        <service id="FSi\Component\DataSource\Extension\Core\Pagination\EventSubscriber\Events">
            <tag name="datasource.subscriber" alias="pagination" />
        </service>

        <!-- OrderingExtension -->
        <service id="FSi\Component\DataSource\Extension\Core\Ordering\EventSubscriber\Events">
            <tag name="datasource.subscriber" alias="ordering" />
        </service>

        <!-- Symfony/CoreExtension -->
        <service id="FSi\Bundle\DataSourceBundle\DataSource\Extension\Symfony\Core\EventSubscriber\BindParameters">
            <tag name="datasource.subscriber" alias="symfonyrequest" />
        </service>

    </services>
</container>
