<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="FSi\Bundle\DataGridBundle\DataGrid\EventSubscriber\ConfigurationBuilder">
            <argument type="service" id="kernel" />
            <argument>Resources/config/datagrid</argument>
            <argument>%datagrid.yaml.main_config%</argument>
            <tag name="datagrid.event_subscriber" />
        </service>
    </services>
</container>
