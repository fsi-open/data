<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <defaults autowire="true" autoconfigure="true" public="false" />

        <service id="FSi\Bundle\DataGridBundle\DataGrid\Extension\Symfony\DependencyInjectionExtension">
            <argument key="$columnTypes" type="tagged_iterator" tag="datagrid.column" />
        </service>

        <service id="FSi\Component\DataGrid\DataMapper\ReflectionMapper" />
        <service id="FSi\Component\DataGrid\DataMapper\PropertyAccessorMapper" />
        <service id="FSi\Component\DataGrid\DataMapper\ChainMapper">
            <argument key="$mappers" type="collection">
                <argument type="service" id="FSi\Component\DataGrid\DataMapper\PropertyAccessorMapper" />
                <argument type="service" id="FSi\Component\DataGrid\DataMapper\ReflectionMapper" />
            </argument>
        </service>

        <service id="FSi\Component\DataGrid\DataGridFactory">
            <argument key="$extensions" type="tagged_iterator" tag="datagrid.extension" />
            <argument key="$dataMapper" type="service" id="FSi\Component\DataGrid\DataMapper\ChainMapper" />
        </service>
        <service id="FSi\Component\DataGrid\DataGridFactoryInterface" alias="FSi\Component\DataGrid\DataGridFactory" />

        <prototype namespace="FSi\Component\DataGrid\Extension\Core\"
                   resource="../../../../Component/DataGrid/Extension/Core/{ColumnType,ColumnTypeExtension,EventSubscriber}" />

        <prototype namespace="FSi\Bundle\DataGridBundle\DataGrid\Extension\Symfony\"
                   resource="../../DataGrid/Extension/Symfony/{ColumnType,ColumnTypeExtension,EventSubscriber}" />

        <service id="FSi\Component\DataGrid\DataGridFormHandler" />
        <service id="FSi\Component\DataGrid\DataGridFormHandlerInterface"
                 alias="FSi\Component\DataGrid\DataGridFormHandler" />
        <service id="FSi\Bundle\DataGridBundle\DataGrid\Extension\Symfony\ColumnTypeExtension\FormExtension">
            <argument key="$csrfProtectionEnabled">%form.type_extension.csrf.enabled%</argument>
        </service>
        <service id="FSi\Component\DataGrid\DataGridCellFormHandlerInterface"
                 alias="FSi\Bundle\DataGridBundle\DataGrid\Extension\Symfony\ColumnTypeExtension\FormExtension" />
    </services>
</container>
